---

import Header from '../components/Header.astro';
import '@fontsource-variable/onest';
import Hero from '../components/Hero.astro'
import Hamburguesas from '../components/Hamburguesas.astro';
import ParaPicar from '../components/ParaPicar.astro';
import PagoEnvio from '../components/PagoEnvio.astro'
import Pedidos from '../components/Pedidos.astro'
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Black Powers - Hamburguesas Smasheadas" />
		<meta name="og:title" content="Black Powers - Hamburguesas Smasheadas">
		<meta name="type" content="Hamburgueseria">
		<meta name="keywords" content="black powers, black, powers, hamburguesas, hamburgueseria, hamburgueseria smash, smash burguers, burguers, smash, hurlingham">
		<meta name="viewport" content="width=device-width" />
		<meta name="og:url" content="https://black-powers.netlify.app">
		<link rel="icon" type="image/svg+xml" href="/burger.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="keywords" content="">
		<title>{title}</title>
	</head>
	<body class="relative">
		<div class="absolute top-0 bottom-0 z-[-2] min-h-screen w-full bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(255,128,0,0.3),rgba(255,255,255,0))]"></div>
		<Header />
		<Hero />
		<Hamburguesas />
		<ParaPicar />
		<PagoEnvio />
		<Pedidos />
		<Footer />
		<slot />
	</body>
</html>

<style is:inline>
	html{
		scroll-behavior: smooth;
	}

	body {
		font-family: 'Onest Variable', sans-serif;
	}

	@media (prefers-reduced-motion: reduce) {
		html{
			scroll-behavior: auto;
		}
	}
</style>
